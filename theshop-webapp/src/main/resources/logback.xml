<?xml version="1.0" encoding="UTF-8"?>
<!-- for dev  -->
<configuration scan="true" scanPeriod="10 seconds">
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%-5p] [%X] [%c][%M][%L] - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="liquibase" level="DEBUG"/>
    <logger name="com" level="INFO"/>
    <logger name="com.mchange.v2.c3p0" level="WARN"/>
    <logger name="freemarker.cache" level="INFO"/>
    <logger name="net" level="INFO"/>
    <logger name="sun" level="INFO"/>
    <logger name="net.jawr" level="WARN"/>
    <logger name="com.tum" level="DEBUG"/>
    <logger name="org" level="INFO"/>
    <logger name="org.apache" level="INFO"/>
    <logger name="org.apache.http" level="DEBUG"/>
    <logger name="org.springframework.http.client" level="DEBUG"/>
    <logger name="jndi" level="INFO"/>
    <logger name="javax" level="INFO"/>
    <root level="ALL">
        <appender-ref ref="console"/>
    </root>
</configuration>